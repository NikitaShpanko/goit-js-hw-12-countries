<article class='country'>
  <h1 class='country-name'>{{name}}</h1>
  <div class='country-info'>
    <div class='country-text'>
      <p class='field'><span class='field-name'>Capital:</span> {{capital}}</p>
      <p class='field'><span class='field-name'>Population:</span> {{population}}</p>
      <p class='field'><span class='field-name'>Languages:</span>
        <ul>{{#each languages}}<li>{{this.name}}</li>{{/each}}</ul>
      </p>
    </div>
    <img src='{{flag}}' alt='flag' class='flag' />
  </div>
</article>